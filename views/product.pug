extends layout

block content
    div
        p  Catégorie : #{category.name}
        p  Prix : #{product.price} €
        p  Description : #{product.description}
        p  Id : #{product._id}
    hr
    p
        a.inline-10(href='/products/' + product._id + '/delete') Supprimer le produit
        a.inline-10(href='/products/' + product._id + '/update') Modifier le produit
